@page
@model Torneo.App.Frontend.Pages.DTs.IndexModel
@{
}
<a class="btn btn-success" asp-page="./Create">Crear D.T</a>
<h1>Lista de directores tecnicos</h1>
<title>cambiar tipo de letra</title>
<style>
        h1{
            font-family: fantasy;
            color: green;
        }
</style>
<table class="table table-success table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var dt in Model.dts)
        {
            <tr>
                <th scope="row">@dt.Id</th>
                <td>@dt.Nombre</td>
                <td>
                    <a class="btn btn-success" asp-page="./Details" asp-route-id="@dt.Id">
                       Detalle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
