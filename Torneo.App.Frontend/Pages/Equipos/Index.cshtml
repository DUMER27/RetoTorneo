@page
@model Torneo.App.Frontend.Pages.Equipos.IndexModel
@{
}
<a class="btn btn-success" asp-page="./Create">Crear equipo</a>
<h1>Lista de equipos</h1>
<title>cambiar tipo de letra</title>
<style>
        h1{
            font-family: fantasy;
            color: green;
        }
</style>
<table class="table table-success table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">D.T</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var equipo in Model.equipos)
        {
            <tr>
                <th scope="row">@equipo.Id</th>
                <td>@equipo.Nombre</td>
                <td>@equipo.DirectorTecnico.Nombre</td>
                <td>
                    <a class="btn btn-success" asp-page="./Details" asp-route-id="@equipo.Id">
                        Detalle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
