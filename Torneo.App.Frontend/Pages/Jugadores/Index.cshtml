@page
@model Torneo.App.Frontend.Pages.Jugadores.IndexModel
@{
}
<a class="btn btn-success" asp-page="./Create">Crear jugador</a>
<h1>Lista de jugadores</h1>
<title>cambiar tipo de letra</title>
<style>
        h1{
            font-family: fantasy;
            color: green;
        }
</style>
<table class="table table-success table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Equipo</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var jugador in Model.jugadores)
        {
            <tr>
                <th scope="row">@jugador.Id</th>
                <td>@jugador.Nombre</td>
                <td>@jugador.Equipo.Nombre</td>
                <td>
                    <a class="btn btn-success" asp-page="./Details" asp-route-id="@jugador.Id">
                        Detalle
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>

